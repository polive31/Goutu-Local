/* Color theme :  White (default) 
--------------------------------------------- */

body {
  background:#eaa05f;
}

.site-container {
	background:#ecc485;
}

.site-title a {
	background:url("../images/header_goutu_transparent_360_150.png") no-repeat center;
}

.home-page .site-title a {
	background:url("../images/header_goutu_transparent_450_190.png") no-repeat center;
}

.footer-widgets {
	background:#f5f5f5;
}

.home-bottom .widgettitle {
	border-bottom:1px solid #ccc;
}

a.more-link,
.more-from-category a {
	background:#f5f5f5;
}

input, select, textarea,
.widget.back ul li {
	border:1px solid #ccc;
}

a.more-link:hover,
.more-from-category a:hover {
	background:#010101;
	color:#fff;
}

.search-form input {
	background:url('../images/search.png') center right no-repeat;
	background-color:#FFF;
}

.top5 .rpwe-block {
	background-color:#f4f4f4;
}

.widget.back ul li {
	background-color:#fafafa;	
}

.widget_nav_menu.themes ul li {
	background-color:#f8f8f8;	
}

.rating:before {
	  color:gold;
}

.rating:after {
	  color:#ddd;
}

.recipes-top, 
.blogs-top,
.archives-top,
html body .wpurp-container .add-picture-link {
	background:#f5f5f5!important; 
}

.widget.themes ul li {
	background-color:#fcfcfc;	
}

.widget.themes ul li:hover {
	background-color:#fefefe;	
}

.single .widget.themes ul li,
.widget.themes ul li.current-menu-item {
  background-color:#fff;
}

.wpurp-recipe-ingredients {
	background-color:#EFEFEF;
}

.archive-pagination li {
	border:1px solid #ccc;
}

.archive-pagination li.active {
  background: #CCC;
}

.frontier-list-item {
	border-color:#ccc;
}

.archive .entry-header a.entry-image-link img,
.search .entry-header a.entry-image-link img {
	border:5px solid #CCC;
}

/* MEDIA QUERIES 
--------------------------------------------*

/* Smartphone */
@media only screen 
	and (max-width:870px) {

	.site-title a,
	.home .site-title a {
		background:url("../images/header_goutu_transparent_360_150.png") no-repeat center;
	}
	
}

/* Retina smartphone */
@media only screen 
	and (max-width:870px)
  and (-webkit-min-device-pixel-ratio:2) {
 
	.site-title a,
	.home .site-title a {
		background:url("images/header_goutu_transparent_720_300.png") no-repeat center;
		background-size:contain;
	} 	


}