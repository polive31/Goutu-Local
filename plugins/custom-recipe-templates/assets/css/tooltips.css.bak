/* CSS TOOLTIP styling 
------------------------------------------*/

.tooltip-content {
  display: none;
	position:absolute; 
  z-index: 10;
  font-size: 16px;
  padding: 14px 20px;
  /*margin-top: -60px;
  margin-left: -150px;
  max-width: 150px; */
  line-height: 16px;
	font-family: 'Oswald', sans-serif;
	color:#111;
	border:1px solid #DCA; 
	background:#fffAF0;
}

.tooltip:hover .tooltip-content,
.tooltip-content:hover {
  display:inline; 

}
    
.tooltip .callout {
	z-index:20;
	position:absolute;
	border:0;
}
    
.tooltip-above img.callout {
  bottom: -12px;
  left: 70px;
}
	
/*CSS3 extras*/
.tooltip-content {
    border-radius:4px;
    box-shadow: 5px 5px 8px #CCC;
}

