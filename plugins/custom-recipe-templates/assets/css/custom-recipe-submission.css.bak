/* Common attributes 
---------------------------------------------------------*/
.screen {
	display:initial;
}

.mobile,
.hidden {
	display:none;
}

.item-container.align-right {
    float: right;
}



/* Generic form styling
------------------------------------------------*/

#custom_recipe_submission_form .form-item,
#custom_recipe_submission_form h4,
.recipe-ingredients-form {
	float:left;
	clear:both;
	width:100%;
}

.form-item {
  background: #ddc3a3;
  margin : 5px 0;
}

.form-headline {
  margin : 5px 0;
}

.item-container {
	float:left;
	width: 85%;
}

.item-element {
	float:left;
	margin:2px 5px;
}

.item-element .headline {
	width:100px;
	float:left;
}

.item-element select,
.item-element input,
.item-element textarea {
	width:100%;
}

/* Specific recipe submission formatting
------------------------------------------------*/
.item-element#ingredient {
	width:200px;
}

.item-element#amount {
	width:75px;
}

.item-element#unit {
	width:150px;
}

.item-element#notes {
	width:250px;
}

.item-element#text {
	width:70%;
}

.item-element#label {
	width: 100px;
}

.item-element#description {
	width: 80%;
}


/* Main
---------------------------------------------------------*/

.recipe-general-form {
	width:100%;
}

.general-item {
  padding-right: 10px;
  float:left;

}



.general-item input,
.recipe-general-form-notes {
  float: left;
  margin: 0 2px;
  padding: 10px;
}

.general-item input.value {
	width: 100px;
}

.general-item input.unit {
	width: 200px;
}

/* Recipe submission formatting
------------------------------------------------*/


.ui-sortable {
	border: 1px dashed #555;
	padding : 5px;
}

.ingredient-group-stub {
	display:none;
}



.item-container#controls {
	width:25px;
	padding-top:2px;
}


.sub-controls {
	font-size:20px;
	width:25px;
  height:100%;
}

.sub-controls#move {
	float:left;
	cursor: -webkit-grab;
}

.sub-controls#move:hover {
	background:#c2ccd6;
}

.sub-controls#delete {
	float:right;
}

.sub-controls#move:hover {
	background:#c2ccd6;
}




/* Dropdown taxonomies/tags lists
------------------------------------------------*/
.select2-container {
	margin:5px!important;
}
	

.select2-search-field input {
	width:200px;
	min-width:200px;
}


