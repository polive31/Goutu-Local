/* CSS TOOLTIP styling 
------------------------------------------*/

.tooltip-content {
  display:inline; 
  visibility: hidden;
	position:absolute; 
  z-index: 10;
  margin-top: -60px;
  margin-left: -150px;
  opacity:0;
  transition: visibility 0s, opacity 0.7s ease-in-out;
  transition-delay:1s;
  /*background:rgba(10, 10, 10, 0.5);*/
  /*max-width: 150px; */
}

.tooltip-above  .tooltip-content {
	padding-bottom : 20px;
}

.tooltip-content .wrap {
  font-size: 16px;
  padding: 14px 20px;
	color:#111;
	border:1px solid #DCA; 
	background:#fffAF0;
  line-height: 16px;
	font-family: 'Oswald', sans-serif;
}

.tooltip:hover .tooltip-content,
.tooltip-content:hover {
  opacity:1;
	visibility:visible;
}
   
  
.tooltip .callout {
	z-index:20;
	position:absolute;
	border:0;
}
    
.tooltip-above img.callout {
  bottom: 9px;
  left: 70px;
}
	
/*CSS3 extras*/
.tooltip-content .wrap {
    border-radius:4px;
    box-shadow: 5px 5px 8px #CCC;
}

