/*
Plugin Name: Custom Ratings
File name : custom-ratings.css
Description: Ratings via stars in comments
*/


/* Star rating input
--------------------------------------------- */

.rating-wrapper {
		overflow: hidden;
		display: inline-block;
		}

.rating-input {
		display:none;
		}

.rating-star:hover,
.rating-star:hover ~ .rating-star {
		background-position: 0 0;
		}

.rating-wrapper:hover .rating-star:hover,
.rating-wrapper:hover .rating-star:hover ~ .rating-star,
.rating-input:checked ~ .rating-star {
    background-position: 0 0;
}

.rating-star,
.rating-wrapper:hover .rating-star {
		float: right;
		display: block;
		width: 20px;
		height: 20px;
		background: url('../images/rating-star.png') -20px 0/40px 20px no-repeat;
}


/* Star rating output
--------------------------------------------- */

.comment-rating,
.rating {
  font-size:18px;
  text-align:center;
}


.rating-details {
	font-size:13px;
	color:#666;
	padding:10px 0 0 10px;
}
