<?php 

// Exit if accessed directly.
if ( ! defined( 'ABSPATH' ) ) {
	exit;
}

public class CustomStarRatings {
	
	private $_nb;
	private $_rating_cats;

	const RATING_CATEGORIES = array( 
		array (
			'id'=>'rating',
			'weight' => 2,
			'title'=>'Overall rating',
			'question'=>'How did you like this dish ?',
		),
		array( 
			'id'=>'clarity',
			'weight' => 1,
			'title'=>'Clarity',
			'question'=>'How clear was the recipe ?',
		),
	);
	
	public __construct() {
		$this -> _nb = count(RATING_CATEGORIES);
	}
	
	public hydrate() {
		foreach (RATING_CATEGORIES as $cat) {
			$this -> _rating_cats[]=$cat;
		}
	}
	
	public get($id) {
		$out = false;
		if ( isset(RATING_CATEGORIES[$id]) )
			$out = RATING_CATEGORIES[$id];
		return $out;
	}
	
}

