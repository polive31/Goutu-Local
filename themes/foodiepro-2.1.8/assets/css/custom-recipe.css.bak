/* Custom Recipe Template 
-------------------------------------------*/

.recipe-top {
	width:100%;
	float:left;
	clear:both;
	border-bottom:1px dotted #333;	
	margin:20px 0;
	padding:10px 0;
}

.recipe-container {
	display:inline;		
	float:left;
	clear:both;
	width:100%;
	margin-bottom:20px;
	font-family: Open Sans, sans-serif;
	font-size:14px;
	color:#1a1a1a;
	font-weight:normal;
}

/* Top Buttons */

.single-recipe .fa {
	display:block;
	float:left;
}

.recipe-buttons a {
	float: right;
	margin: 0 10px;
}

.recipe-function {
	font-size:25px;
	color:#666;
}


.button-tooltip {
	font-size:14px;
	color:#666;
	text-decoration:none;	
	float:left;
	margin-left:10px;
	font-variant: small-caps;
  font-weight: 500;
}

.tooltip-alt {
	display:none;
}

.tooltip-shown {
	display:initial;
}

