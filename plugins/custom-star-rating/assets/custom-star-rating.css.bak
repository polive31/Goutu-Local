/*
Plugin Name: Custom Ratings
File name : custom-ratings.css
Description: Ratings via stars in comments
*/


/* Star rating input
--------------------------------------------- */

td.rating-title {
	float:left;
	clear:left;
	padding:10px 0 10px;
	width:150px;
}


.form-submit {
	display:block;
	float:left;
	clear:left;
}

.rating-wrapper {
		padding:10px;
		float:left;
		clear:right;
		overflow: hidden;
		display: inline-block;
}

.rating-input {
		display:none;
}

.rating-star:hover,
.rating-star:hover ~ .rating-star {
		background-position: 0 0;
}

.rating-wrapper:hover .rating-star:hover,
.rating-wrapper:hover .rating-star:hover ~ .rating-star,
.rating-input:checked ~ .rating-star {
    background-position: 0 0;
}

.rating-star,
.rating-wrapper:hover .rating-star {
		float: right;
		display: block;
		width: 20px;
		height: 20px;
		background: url('../images/rating-star.png') -20px 0/40px 20px no-repeat;
}


/* Star rating output
--------------------------------------------- */

.rating {
  font-size:18px;
}

.comment-rating .rating {
  font-size:16px;
}

.rating-details {
	font-size:13px;
	color:#666;
	padding:10px 0 0 10px;
}
