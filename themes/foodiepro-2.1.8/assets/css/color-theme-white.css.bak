/* Color theme :  White (default) 
--------------------------------------------- */

body {
  background:#ffffff;
}

.site-container {
	background-color:#ffffff;
}

.site-title a {
	background:url("../../images/logo_goutu_transparent_h75.png") no-repeat center;
}

.home-page .site-title a {
	background:url("../../images/logo_goutu_transparent_450_190.png") no-repeat center;
}

h1.entry-title,
.entry-title a,
.sidebar .widgettitle a,
.widgettitle  {
	color:#000;
}


.home-bottom .widgettitle {
	border-bottom:1px solid #ccc;
}

.img-menu a .menu-title span,
a.more-link,
.more-from-category a {
	background:#f5f5f5;
}


.img-menu:hover a .menu-title span,
a.more-link:hover,
.more-from-category a:hover {
	/*background:#da5c00;
  background:#923e00;
  background:#e08800;*/
  background:#63584b;
	color:#fff;
}


.footer-widgets,
.recipes-top, 
.blogs-top,
.archives-top,
html body .wpurp-container .add-picture-link {
	background-color:#f5f5f5!important; /* important needed because of WPURP override	*/
}


/* Text area specific formatting */
input[type="text"],
input[type="email"],
input[type="password"],
optgroup,
textarea,
.search-form input {
	background-color:#fefefe;/* background-color important, pas background car conflit avec autre setting plus loin*/
}

select {
    background-color:#fefefe;
}

/* WIDGETS 
-------------------------------------------------------*/


.sidebar-primary .widget.themes {
	border: 1px dashed #ccc;
}

.widget_nav_menu.themes ul li {
	background-color:#f8f8f8;	
}

input, select, textarea,
.widget.back ul li {
	border:1px solid #ccc;
}


.widget.back ul li {
	background-color:#fafafa;	
}


/* Widget top5 */

.top5 .rpwe-block {
	background-color:#f4f4f4;
}

/* Widget themes */

.widget.themes ul li,
.single .widget.themes ul li {
	background-color:#fcfcfc;	
}

.single .widget.themes ul li:hover,
.widget.themes ul li:hover,
.widget.back ul li:hover {
	background-color:#fefefe;	
}

.widget.themes ul li.current-menu-item,
.archive-pagination li.active {
	background-color:#fefefe;
}

.recipes-bottom .rpwe_widget .widget-wrap,
.blogs-bottom .rpwe_widget .widget-wrap {
	/*background-color:#f5f5f5;*/
	border-bottom: 1px dotted #ccc;
}


/* MENU 
--------------------------------------------*/




/* ARCHIVES 
--------------------------------------------*/

.archive-pagination li {
	border:1px solid #ccc;
}

/*.archive .entry-header a.entry-image-link img,
.search .entry-header a.entry-image-link img,*/
/*.content a.rpwe-img img,*/
a.entry-image-link img {
	border:5px solid #CCC;
}

/*.content a.rpwe-img:hover img,*/
a.entry-image-link:hover img {
	border-color:#fff;
}

/* MISC 
--------------------------------------------*/

.frontier-list-item {
	border-color:#aaa;
}


/* MEDIA QUERIES 
--------------------------------------------*

/* Smartphone */
@media only screen 
	and (max-width:870px) {

	.site-title a,
	.home .site-title a {
		background:url("../../images/logo_goutu_transparent_360_150.png") no-repeat center;
	}
	
}

/* Retina smartphone */
@media only screen 
	and (max-width:870px)
  and (-webkit-min-device-pixel-ratio:2) {
 
	.site-title a,
	.home .site-title a {
		background:url("../../images/logo_goutu_transparent_720_300.png") no-repeat center;
		background-size:contain;
	} 	


}