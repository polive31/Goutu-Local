/* Custom Recipe Template 
-------------------------------------------*/

.recipe-top {
	width:100%;
	float:left;
	clear:both;
	border-bottom:1px dotted #333;	
	margin:20px 0;
	padding:10px 0;
}

.recipe-container {
	display:inline;		
	float:left;
	clear:both;
	width:100%;
	margin-bottom:20px;
	font-family: Open Sans, sans-serif;
	font-size:14px;
	color:#1a1a1a;
	font-weight:normal;
}

/* Top Buttons */

.recipe-buttons {
	float:left;
}

.recipe-button {
	float: left;
	font-size:25px;
	margin: 0 10px;
	padding: 5px 0;
}

.recipe-button a {
	color:#555555;
}

.recipe-button a:before {
	display:block;
	float:left;
	font-family:FontAwesome;
	font-size:inherit;
	line-height: 24px;
}

a.recipe-share-button:before {
	content:"\f1e0"; /* fa-alt-share */
}

a.recipe-review-button:before {
	content:"\f044"; /* fa-pencil-square-o */
}

a.wpurp-recipe-print:before {
	content:"\f02f"; /* fa-print */
}

a.wpurp-recipe-favorite:before {
	content:"\f08a"; /* fa-heart-o */
}

a.wpurp-recipe-favorite.is-favorite:before {
	content:"\f004"; /* fa-heart */
}

a.wpurp-recipe-add-to-shopping-list:before {
	content:"\f07a"; /* fa-cart */ 
}

a.wpurp-recipe-add-to-shopping-list.in-shopping-list:before {
	content:"\f218"; /* fa-cart-plus */
}
	
	
.button-caption {
	font-size:14px;
	color:#666;
	text-decoration:none;	
	float:left;
	margin-left:10px;
	font-variant: small-caps;
  font-weight: bold;
}

.tooltip-alt,
.recipe-tooltip-content {
	display:none;
}

/* Image */

.image-container {
	min-width:300px;
	max-width:60%;
	float:left;
	padding:0px;
}

.recipe-img {
	width:inherit;
	float:left;
}

.image-container img {
	width:100%;
	max-height:350px;
	float:left;
	object-fit:contain;
	object-position: 0 0;
}


/* Recipe info : rating, tags 
-------------------------------------------------*/
.info-container {
	float:left;
	padding-left:30px;
	max-width:40%;
}

.label-container {
	margin-bottom:12px;
	clear: both;
	float:left;
}

.recipe-container .rating {
  font-size:24px;
}

.recipe-container span.fa-stack {
	width: 23px;
}

.recipe-label {
	float:left;
	width:120px;
	font-weight:bold;
}

.recipe-label:before {
	font-family: FontAwesome;
	font-weight: normal;
	width:20px;
	float:left;
}

.recipe-label#servings {
	padding-top: 4px;
}
	
.recipe-label#servings:before {
	content:"\f0f5";
}

.recipe-label#tag:before {
	content:"\f02b";
}

.recipe-label#prep:before {
	content:"\f256";
}

.recipe-label#cook:before {
	content:"\f252";
}

.recipe-label#wait:before {
	content:"\f04c";
}

.adjust-recipe-servings {
	width:40px;
	padding:2px;
	background:white;
	border:1px solid #bbbbbb;
	border-radius:0;
	line-height:20px;
	font-size:16px;
}

/* Ingredients */

.ingredients-container {
	float:left;
	border:1px dashed #000;
	width:40%;
	margin:0 30px 10px 0;
	padding:10px 10px 10px 20px;
	text-decoration:none;
}

.ingredients-container .entry-content ul li {
  list-style-type: decimal;
  display: block;
}

li.ingredient-group,
.recipe-instruction-group {
	font-family:"Oswald";
  display: block;
 	margin-bottom:10px;
 	color:#737373;
	font-size:20px;	
}

ul.wpurp-recipe-ingredients {
  margin: 0 0 10px 7px;
}

li.wpurp-recipe-ingredient a {
	text-decoration: none;
	color:#1a1a1a;
}

li.wpurp-recipe-ingredient a:hover {
	text-decoration: underline;
}

/* Instructions */
.recipe-instruction-group {
 	font-size:30px;
}

ol.wpurp-recipe-instructions {
    list-style-position: inside;
}

li.wpurp-recipe-instruction {
	font-family:"Oswald";
  list-style-position: inside;
  margin-bottom: 20px;
  text-align:justify;
  font-size: 30px;
  line-height: 20px;  
  color: #737373;
}

li.wpurp-recipe-instruction.li-first.li-last {
	list-style-type: none;
}

li.wpurp-recipe-instruction span {
	font-family: Open Sans, sans-serif;
  font-size: 14px;
  color: #1a1a1a;
  vertical-align:middle;
}

/* Recipe timer WPURP addon 
------------------------------------------------------------*/
#wpurp-timer-container {
  position: fixed;
  z-index: 16777271;
  left: 0;
  right: 0;
  bottom: 0;
  height: 50px;
  font-size: 24px;
  line-height: 50px;
  background-color: rgba(255,255,255,0.9);
  color: #000; 
}
  #wpurp-timer-container .wpurp-timer-icon {
    cursor: pointer;
    padding: 0 10px; }
    #wpurp-timer-container .wpurp-timer-icon svg {
      display: table-cell;
      vertical-align: middle;
      width: 24px;
      height: 24px; }
  #wpurp-timer-container span {
    display: table-cell;
    vertical-align: middle; }
    #wpurp-timer-container span#wpurp-timer-bar-container {
      width: 100%;
      padding: 0 10px 0 15px; }
      #wpurp-timer-container span#wpurp-timer-bar-container #wpurp-timer-bar {
        display: block;
        border: 2px solid #000;
        height: 24px;
        width: 100%; }
        #wpurp-timer-container span#wpurp-timer-bar-container #wpurp-timer-bar #wpurp-timer-bar-elapsed {
          display: block;
          height: 100%;
          width: 0%;
          background-color: #000;
          border: 0; }

/* Picture gallery 
----------------------------------------------*/
#joined-pics .add-picture-button button,
#joined-pics .gallery-item {
	margin-right:5px!important;
}

#joined-pics .add-picture-button button {
	text-transform:uppercase;
  text-align:center;
  width:75px;
  height:75px;
	font-family: "Lato",sans-serif;
  font-size: 10px;	
	float:left;
	margin-top: 4px;	
	line-height: 14px;
	padding: 10px;
}

#joined-pics .add-picture-button button:hover {
	color:#000;
}

#joined-pics .add-picture-button button:before {
	/* content:"\f067"; Plus */
	content:"+"; /* Plus */
	display:block;
}

/*
Plugin Name: Custom Ratings
File name : custom-ratings.css
Description: Ratings via stars in comments
*/



/* Star rating input
--------------------------------------------- */

td.rating-title {
	font-size:16px;
	padding:10px 0 10px;
}


.form-submit {
	display:block;
	float:left;
	clear:left;
}

.rating-wrapper {
		padding:10px;
		float:left;
		clear:right;
		overflow: hidden;
		display: inline-block;
}

.rating-input {
		display:none;
}

.rating-star:hover,
.rating-star:hover ~ .rating-star {
		background-position: 0 0;
}

.rating-wrapper:hover .rating-star:hover,
.rating-wrapper:hover .rating-star:hover ~ .rating-star,
.rating-input:checked ~ .rating-star {
    background-position: 0 0;
}

.rating-star,
.rating-wrapper:hover .rating-star {
		float: right;
		display: block;
		width: 24px;
		height: 24px;
		background: url('../images/rating-star.png') -24px 0/48px 24px no-repeat;
}


/* Star rating output
--------------------------------------------- */

/* Rating table formatting
--------------------------------*/

table.ratings-table {
	text-align: center;
	width: 100%;	
}

.ratings-table tr {
	line-height: 30px;
}

/* Rating column  */

td.rating {
	min-width:120px;
}
.comment td.rating {
	width:90px;
}

/* Category column  */

td.rating-category {
	padding:0 10px 0 0;
	font-style:italic;
	text-align: left;
}
.rating-label {
  font-size:18px;
}

/* Votes column */

.rating-details {
	font-size:13px;
	color:#666;
	padding:0 0 0 10px;
	min-width: 60px;
}


/* Rating stars formatting 
-----------------------------------------*/

/* Rating star size */

.rating {
  font-size:18px;
}
.comment .rating {
  font-size:16px;
}

/* Stars spacing */
.fa-stack {
  width: 23px!important;
  height: 23px!important;
  line-height: 18px!important;
}

.comment .fa-stack {
  height: 16px!important;
	width: 16px!important;
  line-height: 16px!important;
}

/* Icons colors */

i.fa.fa-star,
i.fa.fa-star-half-o {
	/*color:#ff8f00;*/
	color:#f5a241;
}
i.fa.fa-star-o {
	/*color:#aaa;
	color:#d6a86d;
	color:#d67f33;
	color:#cc9c73;*/
	color:#d6b090;
}
.full i.fa.fa-star-o {
	color:#f18b14;
}


/* MEDIA QUERIES 
---------------------------------------------------*/

@media only screen and (max-width:570px) {
	
.image-container,
.info-container,
.wpurp-recipe-instruction-container,
.ingredients-container {
	max-width:100%; /* this property is set for info-container in screen display*/
	width:100%;
	margin-bottom:20px;
	float:left;
}