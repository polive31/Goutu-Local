span.bp_counter {
	background-color:red;
	border-radius:50%;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
	color:#FFF;
	text-align:center;
	position:absolute;
}

.mega-menu-item span.bp_counter {
	/*display:block;*/
	/*width:20px;
	height:20px;*/
	width:20px;
	height:20px;
	top:10px;
	right:10px;
	font-family : "Lato","Helvetica Neue",sans-serif;
	line-height : 14px;
	font-size:14px;
	padding:3px 5px 2px 5px;
	/*padding-bottom:15px;*/
}


/* TOGGLE MENU RESPONSIVE */

/* Counters */

.toggle-menu {
	position:relative;
}

.toggle-menu span.bp_counter {
	font-size : 12px;
	line-height:12px;
	width:16px;
	height:16px;
	padding : 2px 2px 2px 2px;
	top:-2px;
	right:-8px;
}

/* Icons */

.mega-menu-toggle a {
	text-decoration:none;
	font-size : 18px;
}

.mega-menu-toggle a[class^='dashicons']:before {
	font-family:dashicons;
}

.mega-menu-toggle a[class^='fa']:before {
	font-family:FontAwesome;
}

.dashicons-profile:before {
	content: "\f110";
}

.fa-notifications:before {
    content: "\f0f3"; /*Bell */
}

.fa-friendships:before {
    content: "\f0c0"; /*Friends */
}

.fa-events:before {
    content: "\f073"; /*Calendar */
}


