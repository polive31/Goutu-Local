/* Image */

.image-container {
	min-width:300px;
	max-width:400px;
	float:left;
	padding:0px;
}

.recipe-img {
	width:inherit;
	float:left;
}

.image-container img {
	width:100%;
	max-height:350px;
	float:left;
	object-fit:contain;
	object-position: 0 0;
}
	
.info-container {
	float:left;
	padding-left:10px;
	max-width:40%;
}

.label-container {
	margin-bottom:12px;
	clear: both;
	float:left;
}

.rating-details {
	float:left;
	/*clear:both;
	width:200px;*/
	font-size:13px;
	color:#666;
	padding:10px 0 0 10px;
}

.recipe-label {
	float:left;
	width:120px;
	font-weight:bold;
}

.recipe-label:before {
	font-family: FontAwesome;
	font-weight: normal;
	width:20px;
	float:left;
}

.recipe-label#servings {
	padding-top: 4px;
}
	
.recipe-label#servings:before {
	content:"\f0f5";
}

.recipe-label#tag:before {
	content:"\f02b";
}

.recipe-label#prep:before {
	content:"\f256";
}

.recipe-label#cook:before {
	content:"\f252";
}

.recipe-label#wait:before {
	content:"\f04c";
}

.adjust-recipe-servings {
	width:40px;
	padding:2px;
	background:white;
	border:1px solid #bbbbbb;
	border-radius:0;
	line-height:20px;
	font-size:16px;
}

/* Ingredients */

.ingredients-container {
	float:left;
	border:1px dashed #000;
	width:40%;
	margin:0 30px 10px 0;
	padding:10px 0 0 10px;
	background-color :#f1b46c;
	text-decoration:none;
}

li.ingredient-group,
.recipe-instruction-group {
  font-weight: bold;
  display: block;
}

ul.wpurp-recipe-ingredients {
  margin: 0 0 10px 7px;
}

li.wpurp-recipe-ingredient {
}

li.wpurp-recipe-ingredient a {
	text-decoration: none;
}

/* Instructions */

ol.wpurp-recipe-instructions {
    /*list-style-position: inside;*/
}

li.wpurp-recipe-instruction {
    margin-bottom: 10px;
}



/* Picture gallery 
----------------------------------------------*/
#joined-pics .add-picture-button button,
#joined-pics .gallery-item {
	margin-right:5px!important;
}

#joined-pics .add-picture-button button {
	text-transform:uppercase;
  text-align:center;
  width:75px;
  height:75px;
  font-size:12px;
	color:#787878;
	float:left;
	background:#ddc3a3;
}

#joined-pics .add-picture-button button:hover {
	color:#000!important;
}

#joined-pics .add-picture-button button:before {
	/* content:"\f067"; Plus */
	content:"+"; /* Plus */
  font-size: 14px!important;
	display:block;
}

/* MEDIA QUERIES 
---------------------------------------------------*/

@media only screen and (max-width:420px) {
	
.image-container,
.ingredients-container {
	width:100%;
	margin-bottom:20px;
}