.frontier-new-menu {
	display:none;!important
}

.frontier-post-new-list-status {
	background-color:#0F0;
}

#frontier_list_text_before p {
	display:none;
}

#frontier_list_text_before h1 {
	font-size : 24px;
	/*border-bottom : 1px solid #AAA;*/
}


/* ============================================================ 
    =                  FRONTIER POST ARTICLES                 
    ============================================================ */

table.frontier-post-taxonomies {
	width:100%;
}
	
.frontier-post-status, .frontier-list-footer  {
	margin-top : 20px;
	display:block;
	float:left;
	clear:both;
	width:100%;
}

.frontier-list-footer  {
	margin-top : 40px;
}

.frontier-list-item, .frontier-post-list_form, .frontier-list-item-content, .frontier-list-footer	 {
	display:block;
	float:left;
}

.frontier-list-item {
	/*border-top:0px;*/
	border-style:solid;
	border-width : 1px 0 1px 0;
	margin-bottom:0px;
	width:100%;
}

.frontier-status-header {
	clear:both;
	width:100%;
	margin:0px;
	padding:5px;
}

.frontier-status-header#frontier-post-list-status-pending {
	background-color:#dae6ef;
}

.frontier-status-header#frontier-post-list-status-draft {
	background-color:#CCC;
}

.frontier-status-header#frontier-post-list-status-publish {
	background-color:#D9E6D9;
}


.frontier-list-item-content	{
	/*margin-bottom:10px;*/
	float:left;
	padding:10px 5px 10px 5px;
}


.frontier-list-item-content#frontier-post-img img {
	height:100px;
	width:100px;
}

.frontier-list-item-content#frontier-post-title {
	/*width:100px;*/
	/*height:100px;*/
	clear:right;
}

a#frontier-post-new-list-title-link {
	font-family : "PT Sans Narrow","Helvetica Neue",sans-serif;
	font-size:16px;
	text-transform:uppercase;
	text-decoration:none;
}

.frontier-list-item-content#frontier-post-status {
	width:70%;
	font-size : 16px;
}

img.frontier-post-list-icon {
	width:20px;
	height:20px;
	margin-right:5px;
	margin-left:5px;
}

a.frontier-post-comment-link img {
	margin-bottom:0px;
}

.frontier-list-item-content#frontier-post-actions {
	float:right;
}

